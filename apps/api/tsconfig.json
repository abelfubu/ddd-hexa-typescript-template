{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"paths": {
			"@core": [
				"./src/core/index.ts"
			],
			"@auth": [
				"./src/auth/index.ts"
			],
			"@api": [
				"./src/api/index.ts"
			],
			"@tasks": [
				"./src/tasks/index.ts"
			]
		}
	},
	"exclude": [
		"node_modules"
	]
}
